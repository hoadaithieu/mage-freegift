<?xml version="1.0"?>
<layout version="0.1.0">
	<checkout_cart_index>
		<reference name="checkout.cart">
			<action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>simple</type><block>checkout/cart_item_renderer</block><template>vc_freegift/checkout/cart/item/default.phtml</template></action>
			<action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>vc_freegift/checkout/cart/item/default.phtml</template></action>
			<action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>vc_freegift/checkout/cart/item/default.phtml</template></action>
		
		</reference>
	</checkout_cart_index>
	
	<checkout_onepage_review>
		<reference name="root">
            <action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>default</type><block>checkout/cart_item_renderer</block><template>vc_freegift/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>vc_freegift/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>vc_freegift/checkout/onepage/review/item.phtml</template></action>
		
		</reference>
	</checkout_onepage_review>

	<sales_order_view>
		<reference name="order_items">
			<action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>default</type><block>sales/order_item_renderer_default</block><template>vc_freegift/sales/order/items/renderer/default.phtml</template></action>
			<action method="addItemRender" ifconfig="vc_freegift/general/enable"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>vc_freegift/sales/order/items/renderer/default.phtml</template></action>
		
		</reference>
	</sales_order_view>
	
</layout>